
<%= simple_form_for(@notification) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :game_id %>
    <%= f.input :schedule %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
