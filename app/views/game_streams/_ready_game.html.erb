<div class="stream-container">
  <img src="/images/roulette-bg.jpg" alt="pending-game-bg" class="stream-bg-img">
  <div class="stream-content">
    <div class="stream-player-info">
      <p class="player-count" id="player-count"><%= @roulette.roulette_participants.count %></p>
      <div id="player-list-container">
        <% @roulette.roulette_participants.limit(6).order(:winner).order(created_at: :desc).each do |item| %>
          <p><%= item.user.name %></p>
        <% end %>
      </div>
    </div>
    <div class="stream-timer">
      <img src="/images/game-starts.png" alt="game-starts-in" class="timer-label">
      <p class="timer-time" data-remaining-seconds="<%= @roulette.remaining_seconds %>" id="countdown-timer">00:00</p>
      <img src="/images/roulette.png" alt="roulette" class="roulette-img hidden">
    </div>
  </div>
</div>
